{
  "name": "react-transition-switch-monorepo",
  "version": "1.0.0",
  "author": "TheOmer77",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.15.2+sha512.93e57b0126f0df74ce6bff29680394c0ba54ec47246b9cf321f0121d8d9bb03f750a705f24edc3c1180853afd7c2c3b94196d0a3d53d3e069d9e2793ef11f321",
  "scripts": {
    "dev": "pnpm /dev:.*/",
    "dev:package": "pnpm --silent -F react-transition-switch build:watch",
    "dev:examples": "pnpm --silent -F @react-transition-switch/examples dev",
    "build": "pnpm --silent build:package && pnpm --slient build:examples",
    "build:package": "pnpm --silent -F react-transition-switch build",
    "build:examples": "pnpm --silent -F @react-transition-switch/examples build",
    "lint": "pnpm --silent lint:package && pnpm --silent lint:examples",
    "lint:package": "pnpm --silent -F react-transition-switch lint",
    "lint:examples": "pnpm --silent -F @react-transition-switch/examples lint",
    "format": "prettier --write .",
    "format:package": "pnpm --silent -F react-transition-switch format",
    "format:examples": "pnpm --silent -F @react-transition-switch/examples format",
    "ci": "pnpm --silent ci:package && pnpm --silent ci:examples",
    "ci:package": "pnpm --silent -F react-transition-switch run ci",
    "ci:examples": "pnpm --silent -F @react-transition-switch/examples run ci",
    "release": "pnpm run ci:package && cp README.md packages/react-transition-switch && changeset publish"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.2",
    "@changesets/cli": "^2.27.11",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
