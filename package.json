{
  "name": "react-transition-switch-monorepo",
  "version": "1.0.0",
  "author": "TheOmer77",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "scripts": {
    "dev": "pnpm /dev:.*/",
    "dev:package": "pnpm --silent -F react-transition-switch build:watch",
    "dev:examples": "pnpm --silent -F examples dev",
    "build": "pnpm --silent build:package && pnpm --slient build:examples",
    "build:package": "pnpm --silent -F react-transition-switch build",
    "build:examples": "pnpm --silent -F examples build",
    "lint": "pnpm --silent lint:package && pnpm --silent lint:examples",
    "lint:package": "pnpm --silent -F react-transition-switch lint",
    "lint:examples": "pnpm --silent -F examples lint",
    "format": "prettier --write .",
    "format:package": "pnpm --silent -F react-transition-switch format",
    "format:examples": "pnpm --silent -F examples format",
    "ci": "pnpm --silent ci:package && pnpm --silent ci:examples",
    "ci:package": "pnpm --silent -F react-transition-switch run ci",
    "ci:examples": "pnpm --silent -F examples run ci",
    "release": "pnpm run ci:package && cp README.md packages/react-transition-switch && changeset publish"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^22.5.1",
    "@types/number-to-words": "^1.2.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "postcss": "^8.4.41",
    "postcss-hover-media-feature": "^1.0.2",
    "postcss-mixins": "^10.0.1",
    "postcss-viewport-unit-fallback": "^1.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.10",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
