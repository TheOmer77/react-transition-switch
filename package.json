{
  "name": "react-transition-switch-monorepo",
  "version": "1.0.0",
  "author": "TheOmer77",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun --silent dev:package\" \"bun --silent dev:examples\"",
    "dev:package": "bun --silent --cwd packages/react-transition-switch build:watch",
    "dev:examples": "bun --silent --cwd packages/examples dev",
    "build": "bun --silent build:package && bun --slient build:examples",
    "build:package": "bun --silent --cwd packages/react-transition-switch build",
    "build:examples": "bun --silent --cwd packages/examples build",
    "lint": "bun --silent lint:package && bun --silent lint:examples",
    "lint:package": "bun --silent --cwd packages/react-transition-switch lint",
    "lint:examples": "bun --silent --cwd packages/examples lint",
    "format": "prettier --write packages/**/*"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/number-to-words": "^1.2.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.2.2"
  }
}
