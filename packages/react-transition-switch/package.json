{
  "name": "@theomer77/react-transition-switch",
  "description": "A React component allowing to switch between child components with CSS animations.",
  "version": "1.0.1",
  "author": "TheOmer77",
  "license": "MIT",
  "keywords": [
    "react",
    "css",
    "animation",
    "transition"
  ],
  "homepage": "https://react-transition-switch.vercel.app/",
  "bugs": {
    "url": "https://github.com/TheOmer77/react-transition-switch/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheOmer77/react-transition-switch.git",
    "directory": "packages/react-transition-switch"
  },
  "scripts": {
    "build": "pnpm --silent lint && tsup",
    "build:watch": "tsup --watch",
    "lint": "tsc && eslint --max-warnings=0 src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "exports": "attw --pack ."
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "@radix-ui/react-presence": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0"
